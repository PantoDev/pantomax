    "version": "0.2.0",
    "configurations": [
        {
            "name": "run in console",
            "type": "debugpy",
            "request": "launch",
            "module": "panto.cli",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        },
        {
            "name": "server.py",
            "type": "debugpy",
            "request": "launch",
            "module": "panto.server",
            "console": "integratedTerminal",
            "justMyCode": false,
        }
    ]
}
